<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="pdf_generator_view_form" model="ir.ui.view">
        <field name="name">fillers_module.pdf_generator.form</field>
        <field name="model">fillers_module.pdf_generator</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                        <field name="employees"/>
                        <field name="id"/>
                    </group>
                    <group>
                        <field name="employer"/>
                        <field name="file_name"/>
                        <button name="edit_word" string="Generate PDF" type="object" class="oe_highlight" 
                        icon="fa-file-text-o"/>
                    </group>
                    </group>
                    <field name="word_file"/>
                    <field name="pdf_file" widget="pdf_viewer"/>
                </sheet>
            </form>
        </field>
    </record>

    <record model ="ir.ui.view" id="pdf_view_form">
        <field name= "name">pdf.view.form</field>
        <field name= "model">fillers_module.pdf_generator</field>
        <field name= "arch" type="xml">
            <form string= "PDF Generator List" class="text-center">
                <field name="employees" class="font-weight-bold"/>
                <field name="file_name"/>
                <field name="employer"/>
            </form>
        </field>
    </record>


</odoo>