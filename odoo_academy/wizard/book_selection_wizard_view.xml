<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="book_selection_wizard_form_view">
            <field name="name">book.selection.wizard.form</field>
            <field name="model">book.selection.wizard</field>
            <field name="arch" type="xml">
                <form string="Select a book">
                    <group>
                        <field name="books_id"/>
                        <field name="customer_id"/>
                    </group>
                    <footer>
                        <button name="select_a_book" type="object"
                                string="Select a Book" class="oe_highligt"/>
            
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_book_selection_wizard" model="ir.actions.act_window">
            <field name="name">Select a Book</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">book.selection.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>