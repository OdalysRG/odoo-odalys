<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="rental_view_form">
            <field name= "name">book.rental.form</field>
            <field name= "model">book.rental</field>
            <field name= "arch" type="xml">
                <form string= "Rental Form">
                    <sheet>
                        
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="books_id"/>
                                <field name="book_id"/>
                                <field name="customer_id"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration"/>
                            </group>
                            <group>
                                <field name="rented" widget='boolean_toggle'/>
                            </group>
                            <notebook>
                                <page string="Contacts">
                                      <field name= "contacts_ids"/>
                                      </page>
                            </notebook>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model ="ir.ui.view" id="rental_view_list">
            <field name= "name">book.rental.list</field>
            <field name= "model">book.rental</field>
            <field name= "arch" type="xml">
                <tree string= "Rental List" class="text-center">
                    <field name="name" class="font-weight-bold"/>
                    <field name="book_id"/>
                    <field name="rented" widget='boolean_toggle'/>
                    <field name="customer_id"/>
                    <field name="start_date"/>
                    <field name="duration"/>
                    <field name="end_date"/>
                   
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="rental_view_calendar">
            <field name= "name">book.rental.calendar</field>
            <field name= "model">book.rental</field>
            <field name= "arch" type="xml">
                <calendar string="Rental Calendar"
                          date_start="start_date"
                          date_stop="end_date"
                          color="customer_id"
                          mode="month">
                    <field name="name"/>
                    <field name="customer_id"/>
                </calendar>
            </field>
        </record>
        
        
        <record model ="ir.ui.view" id="rental_view_map">
            <field name= "name">book.rental.map</field>
            <field name= "model">book.rental</field>
            <field name= "arch" type="xml">
                <map res_partner= "customer_id">
                    
                    <field name="customer_id" string="Customer"/>
                    <field name="books_id" string="Book Title"/>
                    <field name="book_id" string='Book ID'/>


                </map>
            </field>
        </record>

        <record model="ir.ui.view" id="book_rental_view_search">
            <field name="name">book.rental.search</field>
            <field name="model">book.rental</field>
            <field name="arch" type="xml">
                <search>
                     <field name="books_id"/>
                     <field name="book_id"/>
                     <field name="customer_id"/>
                </search>
            </field>
        </record>
        
    </data>
</odoo>
