<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
       <record model="ir.ui.view" id="book_collection_view_form">
           <field name="name">book.collection.form</field>
           <field name="model">book.collection</field>
           <field name="arch" type="xml">
               <form string="Book Form">
                <sheet>
                    <h1><field name="name"/></h1>
                         <group>
                            <group>
                                 <field name="genre"/>
                            </group>
                             <group>
                                 <field name="author"/>
                            </group>
                             <group>
                                 <field name="editor"/>
                            </group>
                             <group>
                                 <field name="publisher"/>
                            </group>
                             <group>
                                 <field name="year"/>
                            </group>
                             <group>
                                 <field name="isbn"/>
                            </group>
                        </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                        <page string= "Book Copies">
                            <field name="copies_ids"/>
                        </page>  
                    </notebook>
                </sheet>
             </form>
          </field>
        </record>
               
        <record model="ir.ui.view" id="book_collection_view_list">
            <field name="name">book.collection.list</field>
            <field name="model">book.collection</field>
            <field name="arch" type="xml">
                <tree string="Book List" class="text-center">
                        <field name="name"/>
                        <field name="author"/>
                        <field name="genre"/>
                        <field name="year"/>
                        <field name="description"/>
                        <field name="editor"/>
                        <field name="publisher"/>
                        <field name="isbn"/>
                    </tree>
                </field>
            </record>
         
               <record model="ir.ui.view" id="book_collection_view_search">
                   <field name="name">book.collection.search</field>
                   <field name="model">book.collection</field>
                   <field name="arch" type="xml">
                       <search>
                            <field name="name"/>
                            <field name="author"/>
                            <field name="genre"/>
                            <field name="year"/>
                            <field name="description"/>
                            <field name="editor"/>
                            <field name="publisher"/>
                            <field name="isbn"/>
                       </search>
                   </field>
        </record>
        
        <record model="ir.ui.view" id="book_collection_view_pivot">
            <field name="name">book.collection.pivot</field>
            <field name="model">book.collection</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="genre" type="row"/>
                    <field name="name" type="row"/>
                </pivot>
            </field>
        </record>
    </data>
</odoo>