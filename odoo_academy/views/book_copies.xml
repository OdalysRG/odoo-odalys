<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="book_copies_view_form">
            <field name= "name">book.copies.form</field>
            <field name= "model">book.copies</field>
            <field name= "arch" type="xml">
                <form string= "Copies Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="book_name"/>
                                <field name="author"/>
                                <field name="genre"/> 
                                <field name="year"/>                      
                                <field name="isbn"/>
                            </group>
                            <group>
                                <field name="book_id"/>
                                <field name="rentals_id"/>
                                <field name="rented_id"/>
                                <field name="obtainable"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record model ="ir.ui.view" id="book_copies_view_list">
            <field name= "name">book.copies.list</field>
            <field name= "model">book.copies</field>
            <field name= "arch" type="xml">
                <tree string= "Copies List">
                    <field name="book_name"/>
                    <field name="book_id"/>
                    <field name="rented_id"/>
                    <field name="obtainable"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="book_copies_view_search">
            <field name="name">book.copies.search</field>
            <field name="model">book.copies</field>
            <field name="arch" type="xml">
                <search>
                     <field name="book_name"/>
                     <field name="book_id"/>
                </search>
            </field>
        </record>


    </data>
</odoo>