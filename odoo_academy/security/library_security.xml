<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="libary_collection_admin" model="res.groups">
        <field name="name">Library / Admin</field>
    </record>
    
    <record id="only_librarians" model="ir.rule">
        <field name="name">Only Active Books Can Be Modified</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="domain_force">[('available','=',True)]</field>
        <field name="model_id" ref="model_book_collection"/>
    </record>
    
    <record id="only_ecustomers" model="ir.rule">
        <field name="name">Customers Can Read The Info</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="domain_force">[('available','=',True)]</field>
        <field name="model_id" ref="model_book_collection"/>
    </record>
    
</odoo>